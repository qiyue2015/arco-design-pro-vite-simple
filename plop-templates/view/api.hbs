import { AnyObject } from '@/types/global';
import axios from 'axios';
import qs from 'query-string';

export interface {{ properCase name }}Record {
  id: number;
  title: string;
  description: string;
  thumb: string;
}

export interface {{ properCase name }}Params extends Partial<{{ properCase name }}Record> {
  current: number;
  pageSize: number;
}

export interface {{ properCase name }}ListRes {
  list: {{ properCase name }}Record[];
  total: number;
}

// 例表
export function query{{ properCase name }}List(params: {{ properCase name }}Params) {
  return axios.get<{{ properCase name }}ListRes>('/api/{{ pluralize name }}', {
    params,
    paramsSerializer: (obj) => {
      return qs.stringify(obj);
    },
  });
}

// 增加
export function post{{ properCase name }}(data: AnyObject) {
  return axios.post('/api/{{ pluralize name }}', data);
}

// 删除
export function delete{{ properCase name }}(id: number) {
  return axios.delete(`/api/{{ pluralize name }}/${id}`);
}

// 修改
export function put{{ properCase name }}(id: number, data: AnyObject) {
  return axios.put(`/api/{{ pluralize name }}/${id}`, data);
}

// 详情
export function get{{ properCase name }}Detail(id: number) {
  return axios.get(`/api/{{ pluralize name }}/${id}`, {
    params: { id },
  });
}
